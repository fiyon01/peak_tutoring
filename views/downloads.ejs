            </button>
            <button onclick="filterMaterials()" class="px-6 py-2 border border-gray-300 rounded-lg text-lg text-gray-700 hover:bg-gray-200">
                Mathematics
            </button>
            <button onclick="filterMaterials()" class="px-6 py-2 border border-gray-300 rounded-lg text-lg text-gray-700 hover:bg-gray-200">
                History
            </button>
            <button onclick="filterMaterials()" class="px-6 py-2 border border-gray-300 rounded-lg text-lg text-gray-700 hover:bg-gray-200">
                Kiswahili
            </button>
        </div>

        <!-- Sorting & Price Filter -->
        <div class="mb-8 flex justify-between items-center">
            <div>
                <label for="sort-by" class="mr-2 text-lg">Sort by:</label>
                <select id="sort-by" class="px-4 py-2 border border-gray-300 rounded-lg" onchange="sortMaterials()">
                    <option value="name">Name</option>
                    <option value="price">Price</option>
                </select>
            </div>
            <div>
                <label for="price-filter" class="mr-2 text-lg">Filter by Price:</label>
                <select id="price-filter" class="px-4 py-2 border border-gray-300 rounded-lg" onchange="filterMaterials()">
                    <option value="all">All</option>
                    <option value="free">Free</option>
                    <option value="paid">Paid</option>
                </select>
            </div>
        </div>

