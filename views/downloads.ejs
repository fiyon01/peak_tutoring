<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Download Tutoring Materials</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script>
        function filterMaterials() {
            let searchQuery = document.getElementById('search').value.toLowerCase();
            let priceFilter = document.getElementById('price-filter').value;
            let materialCards = document.getElementsByClassName('material-card');
            
            for (let card of materialCards) {
                let title = card.querySelector('.material-title').textContent.toLowerCase();
                let price = card.querySelector('.material-price').textContent.toLowerCase();
                
                // Filter by search query and price
                let matchesSearch = title.includes(searchQuery);
                let matchesPrice = priceFilter === 'all' || price.includes(priceFilter);
                
                if (matchesSearch && matchesPrice) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            }
        }
        
        function sortMaterials() {
            let sortBy = document.getElementById('sort-by').value;
            let materialList = document.getElementById('materials-list');
            let materials = Array.from(materialList.getElementsByClassName('material-card'));
            
            materials.sort((a, b) => {
                if (sortBy === 'price') {
                    return parseFloat(a.querySelector('.material-price').textContent.replace('KSh', '').trim()) - 
                           parseFloat(b.querySelector('.material-price').textContent.replace('KSh', '').trim());
                } else {
                    let titleA = a.querySelector('.material-title').textContent;
                    let titleB = b.querySelector('.material-title').textContent;
                    return titleA.localeCompare(titleB);
                }
            });
            
            materialList.innerHTML = '';
            materials.forEach(material => materialList.appendChild(material));
        }
    </script>
</head>
<body class="bg-gray-100">

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
        <h2 class="text-3xl font-semibold text-center mb-8">Download Tutoring Materials</h2>

        <!-- Search Bar -->
        <div class="mb-6 flex justify-center">
            <input type="text" id="search" class="px-4 py-2 border border-gray-300 rounded-lg w-1/3"
                placeholder="Search for materials..." onkeyup="filterMaterials()">
        </div>

        <!-- Filters and Categories -->
        <div class="flex justify-center space-x-4 mb-8">
            <button onclick="filterMaterials()" class="px-6 py-2 border border-gray-300 rounded-lg text-lg text-gray-700 hover:bg-gray-200">
                All Materials
            </button>
            <button onclick="filterMaterials()" class="px-6 py-2 border border-gray-300 rounded-lg text-lg text-gray-700 hover:bg-gray-200">
                Biology
            </button>
            <button onclick="filterMaterials()" class="px-6 py-2 border border-gray-300 rounded-lg text-lg text-gray-700 hover:bg-gray-200">
                Chemistry
            </button>
